{
    "name": "douglasgreen/imdb",
    "description": "Process IMDB non-commercial datasets",
    "type": "project",
    "keywords": [
        "data processing",
        "datasets",
        "filter",
        "IMDb",
        "movies",
        "non-commercial",
        "PHP",
        "ratings",
        "scripts",
        "statistics"
    ],
    "homepage": "https://github.com/douglasgreen/imdb",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "douglasgreen/opt-parser": "^0.5",
        "douglasgreen/utility": "^0.5"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.0",
        "shipmonk/name-collision-detector": "^2.1",
        "symplify/easy-coding-standard": "^12.5"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\Imdb\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "detect-collisions",
            "ecs",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config_setup.php",
        "post-update-cmd": "config_setup.php"
    }
}
