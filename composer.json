{
    "name": "douglasgreen/imdb",
    "description": "Process IMDB non-commercial datasets",
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/douglasgreen/imdb",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "data processing",
        "datasets",
        "filter",
        "IMDb",
        "movies",
        "non-commercial",
        "PHP",
        "ratings",
        "scripts",
        "statistics"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\Imdb\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "require": {
        "php": ">=8.1",
        "douglasgreen/optparser": "dev-main",
        "douglasgreen/utility": "dev-main"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^1.0",
        "symplify/easy-coding-standard": "^12.2"
    },
    "scripts": {
        "lint": [
            "ecs",
            "rector --dry-run",
            "./run_phpmd.sh",
            "./run_phpstan.sh"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": [
            "vendor/douglasgreen/config-setup/bin/copy_files.php --wrap 100"
        ],
        "post-update-cmd": [
            "vendor/douglasgreen/config-setup/bin/copy_files.php --wrap 100"
        ]
    }
}
